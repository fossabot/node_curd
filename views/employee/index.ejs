<%- include ../partials/header %>
<div class="Container">
<h3 class="text-success">Employee Details</h3>
    
  <div class="col-lg-7" style="text-align:right">  <a href="employees/create">Create New Employee</a><br/></div>
   <% if(employees.length>0){ %>
    <div class="col-lg-8">
    <table border="1" cellpadding="8" cellspacing="8">
        <tr><th>S.No</th><th>Id</th><th>Name</th><th>Position</th><th>Salary</th><th>Actions</th></tr>
        <% for(var i=0;i<employees.length;i++){ ; %>
            <tr>
                <td><%= i+1 %></td>
                <td><%= employees[i]._id %></td>
                <td><%= employees[i].username %></td>
                <td><%= employees[i].address %></td>
                <td><%= employees[i].salary %></td>
                <td><a href="/employees/show/<%= employees[i]._id %>" class="btn-sm btn-info">View</a>&nbsp;&nbsp;
                    <a href="/employees/edit/<%= employees[i]._id %>" class="btn-sm btn-success">Update</a>&nbsp;&nbsp;
                    <a href="/employees/delete/<%= employees[i]._id %>" class="btn-sm btn-danger">Delete</a></td>
            </tr>

        <% } %>
    </table>
</div>
<% } %>
</div>
<%- include ../partials/footer %>
